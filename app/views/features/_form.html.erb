<div class="container text-center">
    <div class="form" style="margin-left:100px;width: 70%;text-align: center;">
      <%= form_with model: [@plan, @feature], local: true  do |form| %>
      <%= render "devise/shared/error_messages", resource: @feature %> 
        <div class="form-group text-center field-with-errors">
           <div class="field">
            <%= form.label :name %><br>
            <%= form.text_field :name, autofocus: true, autocomplete: "name" , :class => 'form-control' %>
          </div>
        </div>
        <div class="form-group">
           <div class="field">
            <%= form.label :code %><br>
            <%= form.text_field :code, autofocus: true, autocomplete: "code" , :class => 'form-control' %>
             </div>
        </div>
        <div class="form-group">
           <div class="field">
            <%= form.label :unit_price %><br>
            <%= form.text_field :unit_price, autofocus: true, autocomplete: "unit_price" , :class => 'form-control' %>
          </div>
        </div>
        <div class="form-group">
           <div class="field">
            <%= form.label :max_unit_limit %><br>
            <%= form.text_field :max_unit_limit, autofocus: true, autocomplete: "max_unit_limit" , :class => 'form-control' %>
          </div>
        </div>
        <div class="actions">
          <%= form.submit textt, :class=> "btn btn-primary btn-lg" %>
        </div>
      <% end %>
  </div>
</div>

