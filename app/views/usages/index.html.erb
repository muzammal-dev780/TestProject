<center>
  <h1 style="margin-top: 30px">Listing all usages of subscription ID <%=@subscription.id %> </h1>
  <td><%=link_to 'Add units', new_subscription_usage_path(@subscription), :class=> "btn btn-primary btn-lg justify-content-center", :role=> "button"%></td>
</center>
<% if @usages.any?%>
  <div class="container" style="margin-top: 110px">
    <div class="row">
      <table class="table table-striped table-bordered table-responsive-md">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Plan Name</th>
            <th scope="col">User Name</th>
            <th scope="col">Feature Name</th>
            <th scope="col">Plan Fees</th>
            <th scope="col">Units</th>
            <th scope="col">Edit Units</th>
          </tr>
        </thead>
        <tbody>
          <% @usages.each do |usage| %>
            <tr>
              <td><%=usage.plan.name%></td>
              <td><%=usage.user.name%></td>
              <td><%=usage.feature.name%></td>
              <td><%=usage.plan.fee%></td>
              <td><%=usage.units_count%></td>
                <td><%=link_to 'Edit units', edit_usage_path(usage), :class=> "btn btn-primary d-flex justify-content-center", :role=> "button"%></td> 
            </tr>
            <%end%>
        </tbody>
      </table>
    </div>
  </div>
<%else%>
<h1 class="text-center" style="margin-top: 150px">No usages so far</h1>
<%end%>

