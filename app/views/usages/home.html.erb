<center>
  <h1 style="margin-top: 30px">Listing all subscriptions of all users</h1>
</center>
<div class="container" style="margin-top: 110px">
  <div class="row">
    <table class="table table-striped table-bordered table-responsive-md">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Plan ID</th>
          <th scope="col">User ID</th>
          <th scope="col">Subscription ID</th>
          <th scope="col">Plan Fees</th>
          <th scope="col">Charge users</th>
        </tr>
      </thead>
      <tbody>
        <% @usages.each do |usage| %>
          <tr>
            <td><%=usage.plan.name%></td>
            <td><%=usage.user.name%></td>
            <td><%=usage.subscription_id%></td>
            <td><%=usage.plan.fee%></td>
              <td><%=link_to 'Add units', new_subscription_usage_path(usage.subscription), :class=> "btn btn-primary d-flex justify-content-center", :role=> "button"%></td> 
          </tr>
          <%end%>
      </tbody>
    </table>
  </div>
</div>