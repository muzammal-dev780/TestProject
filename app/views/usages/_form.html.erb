<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
      <%= form_with(model: [@subscription, @usage], local: true) do |form| %>
        <% if @usage.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@usage.errors.count, "error") %> prohibited this usage from adding to database:</h2>
            <ul>
            <% @usage.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <div class="field">
          <%if @usage.feature %>
            <%= form.label :Select_feature %>
              <%= form.text_field :Select_feature, value: @usage.feature.name, class: "form-control ",  :disabled=> true%>
            </div>
          <%else%>
          <div class="form-group">
              <%= form.label :Select_feature %></br>
              <%= form.select :feature_id, options_for_select(specific_features(@subscription)), {}, class: 'form-control',prompt: 'Select_feature' %>
          </div>
          <%end%>
          <div class="field">
            <%= form.label :units_count %>
            <%= form.number_field :units_count, class: "form-control" %>
          </div>
        </div>
        <div class="actions text-center mt-3">
          <%= form.submit usage_text, class:"btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>

