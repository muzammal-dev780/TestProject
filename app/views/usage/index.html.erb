<center>
  <h1 style="margin-top: 30px">Listing all usages of all users</h1>
</center>
<div class="container" style="margin-top: 110px">
  <div class="row">
      <table class="table table-striped table-bordered table-responsive-md">
        <thead class="thead-dark">
          <tr>
            <th>Subscription ID</th>
            <th>User ID</th>
            <th>Plan Name</th>
            <th>Feature ID</th>
            <th>Feature Max unit limit</th>
            <th>Units used</th>
            <th>Usage</th>
          </tr>
        </thead>
     
      <% @usages.each do |s| %>
        <tr>
              <td><%=s.subscription_id %></td>
              <td><%=s.user_id %></td>
              <td><%=s.plan.name %></td>
              <td><%=s.feature_id %></td>
              <td><%=s.feature.max_unit_limit %></td>
              <td><%=s.units_count %></td>
              <td><%=link_to 'Edit Units', edit_usage_path(s), :class=> "btn btn-primary", :role=> "button"%></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
<br>