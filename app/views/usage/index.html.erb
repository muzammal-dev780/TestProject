<center>
  <h1 style="margin-top: 30px">Listing all usages of all users</h1>
</center>
<div class="container" style="margin-top: 110px">
  <div class="row">
      <table class="table table-striped table-bordered table-responsive-md">
        <thead class="thead-dark">
          <tr>
            <th>Subscription ID</th>
            <th>User ID</th>
            <th>Plan ID</th>
            <th>Billing date</th>
            <th>Usage</th>
          </tr>
        </thead>
     
      <% @subscriptions.each do |s| %>
        <tr>
              <td><%=s.id %></td>
              <td><%=s.user_id %></td>
              <td><%=s.plan_id %></td>
              <td><%=s.bill_day %></td>
              <td><%=link_to 'Add Units', add_usage_path(s), :class=> "btn btn-primary", :role=> "button"%></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
<br>