<div class="container text-center">
  <div class="form" style="margin-left:100px;width: 70%;text-align: center;">
    <%= form_with(model: @plan, local: true) do |form| %>
  <% if @plan.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @plan.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group new_user">
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group new_user">
    <div class="field">
      <%= form.label :fee %>
      <%= form.number_field :fee, class: "form-control" %>
    </div>
  </div>

  <div class="actions new_user">
    <%= form.submit textt, class:"btn btn-primary"%>
  </div>
<% end %>
  </div>
</div>
