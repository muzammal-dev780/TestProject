<div id="contact-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">New Subscription</h4>
      </div>

      <%= form_for @subscription, remote: true do |f| %>
      <div class="modal-body">
        <div class="form-group">
          <%= f.text_field :user_id, class: 'form-control input-lg', placeholder: "User ID" %>
        </div>
        <div class="form-group">
          <%= f.text_field :plan_id, class: 'form-control input-lg', placeholder: "Plan ID" %>
        </div>
        <div class="form-group">
          <%= f.text_field :bill_day, class: 'form-control input-lg', placeholder: "Enter billing day(1-28)" %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>